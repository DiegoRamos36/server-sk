// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                Int     @id @default(autoincrement())
  username          String  @unique
  password          String
  email             String  @unique
  NdePedidos Int @default(0)
  pedidos           String    @default("")
  cargo             String  @default("cliente")
  carteira          String?
  endereco          String?
  numero            Int?
  complemento       String?
  pontoDeReferencia String? @map("ponto_de_referencia")
  cupons Cupom[]
  
  @@map("usuarios")
}

model Item {
  id         Int     @id @default(autoincrement())
  nome       String  @unique
  imgSrc     String  @default("")
  imgAlt     String  @default("")
  desc       String?
  preco      Float
  quantidade Int?
  slug       String  @unique
}

model Cupom {
  id               Int      @id @default(autoincrement())
  codigo           String 
  quantidade       Int
  dataExpedicao    DateTime @default(now())
  userId           Int
  user             User     @relation(fields: [userId], references: [id])

  @@map("cupons")
}
